{
	"type": "module",
	"name": "misskey-reversi",
	"version": "0.0.1",
	"types": "./built/dts/index.d.ts",
	"exports": {
		".": {
			"import": "./built/esm/index.js",
			"types": "./built/dts/index.d.ts"
		},
		"./*": {
			"import": "./built/esm/*",
			"types": "./built/dts/*"
		}
	},
	"scripts": {
		"build": "node ./build.js",
		"build:tsc": "pnpm tsc-esm && pnpm tsc-dts",
		"tsc-esm": "tsc --outDir built/esm",
		"tsc-dts": "tsc --outDir built/dts --declaration true --emitDeclarationOnly true --declarationMap true",
		"watch": "nodemon -w src -e ts,js,cjs,mjs,json --exec \"pnpm run build:tsc\"",
		"typecheck": "tsc --noEmit",
		"biome": "biome",
		"format": "biome check --write",
		"lint": "pnpm typecheck && biome check"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.9.1",
		"nodemon": "3.1.7",
		"typescript": "5.6.3"
	},
	"dependencies": {
		"crc-32": "1.2.2",
		"esbuild": "0.24.0",
		"glob": "11.0.0"
	},
	"files": ["built"]
}
